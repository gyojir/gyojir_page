<% provide(:title, "4コマ漫画") %>
<% breadcrumb :mangas %>

<h1>4コマ漫画</h1>

<div class="centerize-wrapper">
  <div class="centerize-contents">
    <%= form_tag({action: :index}, {:method=>"get"}) do %>
      <%= select_tag :order, options_for_select(::Manga::ORDERS.keys, selected: params[:order]) %>
      <%= submit_tag "検索", name: nil%>
    <% end %>

    <%= render @mangas %>

    <%= will_paginate @mangas, renderer: BootstrapPagination::Rails  %>
  </div>
</div>