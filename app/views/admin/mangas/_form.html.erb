<%= form_for [:admin, @manga] do |f| %>
  <% if @manga.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@manga.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
    <ul>
    <% @manga.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
